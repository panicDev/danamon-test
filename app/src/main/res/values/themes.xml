<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DanamonTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_39</item>
        <item name="colorPrimaryVariant">@color/black_39</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_x3</item>
    </style>

    <style name="TextBig" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_x5</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeader.Black" parent="TextHeader">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextHeader.White" parent="TextHeader">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">#BA1C18</item>
        <item name="android:indeterminateTint">#BA1C18</item>
    </style>
</resources>